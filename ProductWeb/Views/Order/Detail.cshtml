@model OrderVM

<form method="post">
    <input asp-for="OrderHeader.Id" hidden />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-warning form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-primary">PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.Name" />
                                    <span class="text-danger" asp-validation-for="OrderHeader.Name"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Street Address</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.StreetAddress" />
                                    <span class="text-danger" asp-validation-for="OrderHeader.StreetAddress"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                    <span class="text-danger" asp-validation-for="OrderHeader.City"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.State" />
                                    <span class="text-danger" asp-validation-for="OrderHeader.State"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" />
                                    <span class="text-danger" asp-validation-for="OrderHeader.PostalCode"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input readonly type="text" class="form-control bg-secondary" asp-for="OrderHeader.User.Email" />
                                </div>
                            </div>
                            <div class="row my-1">

                                <div class="col-3">Payment Date</div>
                                <div class="col-9">
                                    <input value="@Model.OrderHeader.PaymentDate.ToShortDateString()"
                                           readonly id="paymentDate" type="text" class="form-control bg-secondary" asp-for="OrderHeader.PaymentDate" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control bg-secondary" asp-for="OrderHeader.OrderStatus" />
                                    <img src="@Model.OrderHeader.PaymentImage" height="200px" class="mt-1 rounded" />
                                </div>
                            </div>

                            <input type="submit" asp-action="UpdateOrderHeader" class="btn btn-warning form-control my-1" value="Update Order Header" />
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>
                            <ul class="list-group mb-3">

                                @foreach (var item in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">@item.Product.Name</h6>
                                            <small class="text-muted">Quantity: @item.Count || Price : @item.Product.Price</small>
                                        </div>
                                        <span class="text-muted">@((item.Product.Price * item.Count).ToString("c")) </span>
                                    </li>
                                }

                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @{
                                var off = Model.OrderHeader.OrderStatus == SD.StatusPending ? "" : "disabled";
                                <input @off type="submit" asp-action="StatusOrder" asp-route-status="@SD.StatusApproved" class="btn btn-primary form-control my-1" value="Approve Order" />
                                <input @off type="submit" asp-action="StatusOrder" asp-route-status="@SD.StatusCancelled" class="btn btn-danger form-control my-1" value="Cancel Order" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}